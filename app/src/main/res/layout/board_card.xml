<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp" >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:weightSum="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_weight="0.08">

                <ImageView
                    android:layout_width="60dp"
                    app:srcCompat="@color/colorPrimary"
                    android:id="@+id/boardCardBoardImage"
                    android:layout_height="60dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="BoardName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/boardCardBoardNameText"
                    tools:text="BoardName"
                    android:layout_marginBottom="3dp"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="16sp" />

                <TextView
                    android:text="ThreadCount|ReplyCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/boardCardBoardThreadCountText"
                    android:layout_weight="1"
                    android:layout_marginBottom="3dp"/>

                <TextView
                    android:text="Latest Thread:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/boardCardBoardLatestThread" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>